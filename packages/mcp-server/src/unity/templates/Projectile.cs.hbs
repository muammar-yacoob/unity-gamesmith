using UnityEngine;

/// <summary>
/// Controls projectile movement and collision behavior
/// </summary>
public class Projectile : MonoBehaviour
{
    [Header("Movement Settings")]
    [SerializeField] private float speed = {{speed}}f;
    [SerializeField] private float lifetime = {{lifetime}}f;

    [Header("Damage Settings")]
    [SerializeField] private int damage = {{damage}};

    [Header("Collision Settings")]
    [SerializeField] private bool destroyOnHit = {{destroyOnHit}};
    [SerializeField] private LayerMask hitLayers;

    private Rigidbody2D rb;
    private float spawnTime;

    private void Awake()
    {
        rb = GetComponent<Rigidbody2D>();
        spawnTime = Time.time;
    }

    private void Start()
    {
        // Set initial velocity
        if (rb != null)
        {
            rb.velocity = transform.up * speed;
        }
    }

    private void Update()
    {
        // Destroy after lifetime expires
        if (Time.time >= spawnTime + lifetime)
        {
            Destroy(gameObject);
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        // Check if collision is on a valid hit layer
        if (((1 << collision.gameObject.layer) & hitLayers) != 0)
        {
            // Try to apply damage
            var health = collision.GetComponent<PlayerHealth>();
            if (health != null)
            {
                health.TakeDamage(damage);
            }

            var enemyHealth = collision.GetComponent<EnemyHealth>();
            if (enemyHealth != null)
            {
                enemyHealth.TakeDamage(damage);
            }

            // Destroy projectile if configured
            if (destroyOnHit)
            {
                Destroy(gameObject);
            }
        }
    }
}
