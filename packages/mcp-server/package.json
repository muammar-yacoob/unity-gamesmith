{
  "name": "@spark-apps/unity-mcp",
  "version": "0.2.0",
  "description": "Model Context Protocol (MCP) server for Unity game development - automate 2D/3D games with AI. Features Sketchfab integration, Cinemachine camera, and complete project scaffolding.",
  "type": "module",
  "bin": {
    "unity-mcp": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muammar-yacoob/unity-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/muammar-yacoob/unity-mcp/issues"
  },
  "homepage": "https://github.com/muammar-yacoob/unity-mcp#readme",
  "keywords": [
    "unity",
    "game-development",
    "mcp",
    "model-context-protocol",
    "automation",
    "2d-shooter",
    "3d-character",
    "sketchfab",
    "cinemachine",
    "game-engine",
    "unity-automation",
    "ai-powered",
    "claude-desktop"
  ],
  "author": "Muammar Yacoob <https://github.com/muammar-yacoob>",
  "license": "MIT",
  "scripts": {
    "build": "tsc && mkdir -p dist/unity && cp -r src/unity/templates dist/unity/",
    "dev": "tsc --watch",
    "start": "bun dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "test": "bun test"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "fastmcp": "^1.21.0",
    "zod": "^3.24.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.17.24",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9"
  }
}
